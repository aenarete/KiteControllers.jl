#!/bin/bash
cd "$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")"
if [[ $(basename $(pwd)) == "bin" ]]; then
    cd ..
fi

export MPLBACKEND=qt5agg

if command -v nproc &> /dev/null; then
    FAST_CORES=$(($(nproc) / 2 - 1))
else
    FAST_CORES=3 # default value
fi

GCT="--gcthreads=$FAST_CORES,1"

julia_version=$(julia --version | awk '{print($3)}')
julia_major=${julia_version:0:3} 
if [[ $julia_major == "1.1" ]]; then
    julia_major=${julia_version:0:4}
else
    GCT=""
fi
branch=$(git rev-parse --abbrev-ref HEAD)

echo "Lauching KiteController..."
if test -f "bin/kps-image-${julia_major}-${branch}.so"; then
    echo "Found system image!"
    julia +1.11 -J  bin/kps-image-${julia_major}-${branch}.so -t $FAST_CORES,1 $GCT --project -e "push!(LOAD_PATH,joinpath(pwd(),\"src\"));include(\"./examples/autopilot.jl\")"
else
    julia +1.11 --project -t $FAST_CORES,1 $GCT -e "push!(LOAD_PATH,joinpath(pwd(),\"src\"));include(\"./examples/autopilot.jl\")"
fi